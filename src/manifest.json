{
    "manifest_version": 3,
    "name": "buri",
    "version": "1.0.0",
    "description": "bring U Azure Resource Id from Azure-Portal website",
    "icons": {
        "128": "icons/buri.png"
    },
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "tabs"
    ],
    "background": {
        "service_worker": "buri.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "buri-copy.js"
            ]
        }
    ]
}
