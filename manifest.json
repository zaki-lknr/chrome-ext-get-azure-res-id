{
    "manifest_version": 3,
    "name": "buri azure",
    "version": "0.0.1",
    "description": "get Azure Resource Id from Azure-Portal",
    "icons": {
        "128": "icons/buri.png"
    },
    "permissions": [
        "declarativeContent",
        "clipboardWrite",
        "tabs"
    ],
    "background": {
        "service_worker": "buri.js"
    },
    "action": {
        "default_popup": "buri-popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://portal.azure.com/*"
            ],
            "js": [
                "buri-copy.js"
            ],
            "run_at": "document_end"
        }
    ]
}
